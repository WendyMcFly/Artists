<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="?attr/selectableItemBackground"
                android:padding="16dp">

    <ImageView
        android:id="@+id/artist_cover"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:src="@color/colorPrimary"
        android:scaleType="centerCrop"/>

    <TextView
        android:id="@+id/artist_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_toEndOf="@id/artist_cover"
        android:layout_toRightOf="@id/artist_cover"
        android:ellipsize="end"
        android:maxLines="2"
        android:text="text Name"
        android:textSize="22sp"/>

    <TextView
        android:id="@+id/genre"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/artist_name"
        android:layout_alignStart="@id/artist_name"
        android:layout_below="@id/artist_name"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="rock, roll"
        android:textSize="16sp"/>

    <TextView
        android:id="@+id/description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/artist_cover"
        android:layout_alignLeft="@id/artist_name"
        android:layout_alignStart="@id/artist_name"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="kek 5 kek 8"
        android:textSize="16sp"/>

</RelativeLayout>